<div class="medium-2 columns tyre-left"  >
  <!-- &nbsp; -->
</div>

<div class="medium-8 medium-offset-2 columns" data-equalizer-watch >
  <h1>User: <%= @user.username %></h1>
  <div class="medium-12 columns medium-centered" id="journies" data-equalizer-watch >
    <div class="card-deck-wrapper">
      <div class="mugshot">
        <%= image_tag @user.image %>
      </div>
      <div class="card-deck">
        <ul>
          <li class="card-text">First Name: <%= @user.first_name %></li>
          <li class="card-text">Last Name: <%= @user.last_name %></li>
          <li class="card-text">Email: <%= @user.email %></li>
          <li class="card-text">Username: <%= @user.username %></li>
        </ul>
        <div>
          <div class="card-text">
            <li>Journeys Listed:</li>
            <%= render @user.journeys %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="medium-2 columns tyre-right"  >
  <!-- &nbsp; -->
</div>